<% layout("./layouts/boilerplate") %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-md-6 offset-md-3 mb-5 ">
            <form novalidate class="validated-form" action="/campgrounds/<%= campground._id  %>?_method=PUT"
                method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input required class="form-control" type="text" value="<%= campground.title  %> "
                        name="campground[title]" id="title">
                    <div class="valid-feedback">
                        Looks Good!!!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input required class="form-control" value="<%= campground.location %>" type="text"
                        name="campground[location]" id="location">
                    <div class="valid-feedback">
                        Looks Good!!!
                    </div>
                </div>
                <!-- <input type="file" name="image" multiple> -->
                <div class="mb-3">
                    <label for="price" class="form-label"></label>
                    <div class="input-group ">
                        <span class="input-group-text" id="price-label">$</span>
                        <input required name="campground[price]" value="<%= campground.price %>" type="text"
                            class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price-label">
                        <div class="valid-feedback">
                            Looks Good!!!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea required class="form-control" type="text" name="campground[description]"
                        id="description"><%= campground.description %> </textarea>
                    <div class="valid-feedback">
                        Looks Good!!!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="formFile" class="form-label">Add more images</label>
                    <input class="form-control" name="image" type="file" id="formFile" multiple>
                </div>
                <div class="mb-3">
                    <% campground.images.forEach((img,i)=> { %>

                        <img class="img-thumbnail" src="<%= img.thumbnail %>" alt="">
                        <div class="form-check form-check-inline">

                            <input name="deleteImages[]" class="form-check-input" type="checkbox" id="image-<%=i %>"
                                value="<%= img.filename %>">
                            <label class="form-check-label" for="image-<%=i %>">Delete ?</label>
                        </div>

                        <% }) %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Updage Campground</button>
                </div>
            </form>
            <a href="/campgrounds"> Back to All Campgrounds</a>

        </div>
    </div>